
@font-face
	font-family: 'mc'
	src: url('<%= asset_path('mcLight.ttf') %>') format('truetype')
	font-style: normal
	text-rendering: optimizeLegibility

@font-face
	font-family: 'quickSand'
	src: url('<%= asset_path('Quicksand-Light.otf') %>') format("opentype")
	font-style: normal
	font-weight: bold
	text-rendering: optimizeLegibility
* 
	margin: 0

#home
	position: relative
	background-position: center

#home, #home:before
	width: 100%
	height: 650px

#home:before 
	content: " "
	width: 100%
	height: 100%
	position: absolute
	z-index: -1
	top: 0
	left: 0
	background: -webkit-radial-gradient(top center, ellipse cover, rgba(255,255,255,0.2) 0%,rgba(0,0,0,.5) 70%)

.container
	margin: 0 auto
	max-width: 1500px

.welcome
	position: absolute
	left: 0
	right: 0
	top: 14em
	margin: auto
	text-align: center
	max-width: 700px
	&-txt
		color: rgba(255, 255, 255, .9)
		text-transform: uppercase
		font-size: 40px
		font-family: 'quickSand'

.logo
	position: absolute
	top: .5em
	left: 2em
	width: 80px

.btn
	display: none
	position: absolute
	margin: 1em
	color: white

nav
	ul 
		position: absolute
		top: 0
		background: rgba(0, 0, 0, .07)
		text-align: right
		width: 100%
		font-family: 'quickSand'
		padding: 0

	li
		list-style: none
		padding-top: 25px 
		padding-left: 1.5em
		padding-right: 1.5em
		padding-bottom: 20px 
		display: inline-block
		transition: 1s ease
	li:hover
		background: rgba(0,0,0, .2)
		border-bottom-right-radius: 1em
		border-bottom-left-radius: 1em

	a
		text-decoration: none
		color: white
		font-family: 'mc'
		font-size: 20px

.content
	padding: 0 4em

.table-box
	padding: 2em 0
	display: table
	width: 100% 
	img
		max-width: 400px
	&-el
		display: table-cell
		vertical-align: middle
		text-align: center
	p
		font-size: 26px
		padding: 1em
		color: #2B2B2B
		text-align: left
		font-family: 'mc'

.el
	vertical-align: top
	&-2
		width: 50%

@media screen and (max-width: 768px)
	.footer-el
		padding: 2em .7em
		font-size: 18px

	.table-box
		img
			width: 260px
		p
			font-size: 18px

@media screen and (max-width: 736px) 
	nav 
		display: table
		ul
			display: table-cell
			position: absolute
			right: 0
			width: 200px
			transition: all 1s ease
		li
			display: block

	.table-box img 
		width: 230px

	.footer-el 
		padding: 2em 0.1em

	#home, #home:before
		height: 500px

	.btn
		display: block
		z-index: 1

	.hideMenu
		top: -20em

	.showMenu
		top: 0
		background: rgba(0,0,0, .5)
		height: 100%
		width: 100%

	.welcome
		max-width: 500px
		top: 9.5em

	.welcome-txt
		font-size: 30px
		margin: 1em

	.table-box p 
		font-size: 18px
		padding: 2em 0

@media screen and (max-width: 414px)
	.table-box-el
		display: block
	.el-2
		width: 100%

	.footer-el
		display: block
		font-size: 20px
		padding: 1em 0.7em

	.table-box p 
		font-size: 18px
		text-align: center
		padding-top: 1em


	.welcome-txt
		font-size: 30px
		margin-right: 1em
		margin-left: 1em
		text-transform: lowercase

	footer
		text-align: center

	ul
		padding: 0


