
@font-face
	font-family: 'mc'
	src: url('<%= asset_path('mcLight.ttf') %>') format('truetype')
	font-style: normal
	text-rendering: optimizeLegibility

@font-face
	font-family: 'quickSand'
	src: url('<%= asset_path('Quicksand-Light.otf') %>') format("opentype")
	font-style: normal
	font-weight: bold
	text-rendering: optimizeLegibility
* 
	margin: 0

.container
	margin: 0 auto
	max-width: 1500px

.welcome
	position: absolute
	left: 0
	right: 0
	top: 16em
	margin: auto
	text-align: center
	max-width: 900px
	&-txt
		color: rgba(255, 255, 255, .9)
		text-transform: uppercase
		font-size: 40px
		font-family: 'quickSand'

#home
	position: relative
	background-position: center

#home, #home:before
	width: 100%
	height: 650px


#home:before 
	content: " "
	width: 100%
	height: 100%
	position: absolute
	z-index: -1
	top: 0
	left: 0
	background: -webkit-radial-gradient(top center, ellipse cover, rgba(255,255,255,0.2) 0%,rgba(0,0,0,.5) 70%)

nav
	position: absolute
	top: 0
	text-align: right
	width: 100%
	font-family: 'quickSand'

	li
		list-style: none
		padding: 1.5em
		display: inline-block

	a
		text-decoration: none
		color: white
		font-size: 20px



