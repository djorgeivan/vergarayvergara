.table-box
  padding: 2em 0
  display: table
  width: 100% 
  img
    max-width: 400px
  &-el
    display: table-cell
    vertical-align: middle
    text-align: center
  p
    font-size: 26px
    padding: 1em
    color: #2B2B2B
    text-align: left
    font-family: 'helve'

.el
  vertical-align: top
  &-2
    width: 50%


.fill
  width: 100%

.center
  max-width: 40em
  margin: 0 auto

  &-el 
    text-align: center

