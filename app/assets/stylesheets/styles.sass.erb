@font-face
  font-family: 'mc'
  src: url('<%= asset_path('mcLight.ttf') %>') format('truetype')
  font-style: normal
  font-weight: bold
  text-rendering: optimizeLegibility

@font-face
  font-family: 'quickSand'
  src: url('<%= asset_path('Quicksand-Regular.otf') %>') format("opentype")
  src: url('<%= asset_path('Quicksand-Light.otf') %>') format("opentype")
  font-style: normal
  text-rendering: optimizeLegibility

@font-face
  font-family: 'helve'
  src: url('<%= asset_path('HelveticaLTStd-Light.otf') %>') format("opentype")
  text-rendering: optimizeLegibility

* 
  margin: 0

li
  list-style: none

#home
  position: relative
  background-position: center

#home, #home:before
  width: 100%
  height: 650px

#home:before 
  content: " "
  width: 100%
  height: 100%
  position: absolute
  z-index: -1
  top: 0
  left: 0
  background: -webkit-radial-gradient(top center, ellipse cover, rgba(255,255,255,0.2) 0%,rgba(0,0,0,.5) 70%)

.container
  margin: 0 auto
  max-width: 1500px

.hidden
  display: none

.welcome
  position: absolute
  left: 0
  right: 0
  top: 14em
  margin: auto
  text-align: center
  max-width: 700px
  &-txt
    color: rgba(255, 255, 255, .8)
    text-transform: uppercase
    font-size: 40px
    font-family: 'helve'

.logo
  position: absolute
  top: .5em
  left: 2em
  width: 80px

.logotop
  opacity: .8
  width: 55px
  position: absolute
  bottom: 8px
  z-index: 1
  left: 1em

.btn
  display: none
  position: absolute
  margin: 1em
  color: white

nav
  ul 
    position: absolute
    top: 0
    background: rgba(0, 0, 0, .07)
    text-align: right
    width: 100%
    font-family: 'helvetica'
    padding: 0

  li
    list-style: none
    padding-top: 20px 
    padding-left: 1.5em
    padding-right: 1.5em
    padding-bottom: 15px 
    display: inline-block
    transition: 1s ease
  li:hover
    background: rgba(0,0,0, .2)

  a
    text-decoration: none
    color: white
    font-family: 'helve'
    font-size: 18px

.content, .content-show
  font-family: "helve"
  padding: 0 4em
  margin: 0 auto
  max-width: 50em
  &-post
    padding: 1em 0

.contact
  width: 40em
  height: 30em

  textarea
    width: 100%
    height: 13em
    border-radius: 10px 
    font-size: 1em

  input[type=email]
    height: 2em

  input[type=text], input[type=email], textarea
    color: #595959
    border: 1px solid #dddddd

  label
    display: none


/*flash*/

.alert-error
  background-color: #f2dede
  border-color: #eed3d7
  color: #b94a48
  text-align: left


.alert-alert
  background-color: #f2dede
  border-color: #eed3d7
  color: #b94a48
  text-align: left


.alert-success
  background-color: #dff0d8
  border-color: #d6e9c6
  color: #468847
  text-align: left


.alert-notice
  background-color: #dff0d8
  border-color: #d6e9c6
  color: #468847
  text-align: left

.phone
  font-weight: bolder
  font-size: 1.1em
  color: #6c2222


