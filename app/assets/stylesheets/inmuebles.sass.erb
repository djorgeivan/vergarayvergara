.menu
	ul 
		position: relative
		background: #404040
	li a
		color: white

.inmuebles
	width: 100%
	display: table

form, .post-box
	display: table-cell

.form
	&-group
		margin-bottom: 3em
		height: 4em
	&-box
		background-color: #8C8C8C
		padding-top: 2em
		width: 100%


.slider
	overflow: hidden
	height: .2em !important

form
	background-color: #203959
	color: white
	padding: 2em 
	width: 30%
	text-align: center
	font-family: 'mc'

	p
		margin-top: 1em

	h3
		margin-bottom: 1em
		font-size: 20px

	input, div, select
		width: 100%
		padding-top: 5px
		padding-bottom: 5px
		margin: .5em 0
		border-radius: 10px 
		height: 2em
		border: none

	input[type=range]
		height: 20px
		border: none

	input[type=button]
		text-shadow: 0.5px 0.5px 0px black
		background: linear-gradient(#e5e551, #fe5e5e)
		
.post-box
	width: 70%