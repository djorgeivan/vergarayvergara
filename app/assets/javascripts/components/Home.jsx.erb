class Home extends React.Component {

	constructor(props) {
		super(props);

		this.state = {
			toggle: false
		}
	}

	componentDidMount() {
		$("#home").bgswitcher({
  		images: [
  			"<%= asset_path '1.jpg' %>", 
  			"<%= asset_path '2.jpg' %>", 
  			"<%= asset_path '3.jpg' %>"
  		]
		});
	}

	componentWillUnmount() {
		$("#home").bgswitcher('destroy');
	}

	toggleMenu() {
		this.setState({
			toggle: !this.state.toggle
		});
	}

	classMenu() {
		return (this.state.toggle) ? 'showMenu' : 'hideMenu';
	}

	render() {
		return(

			<div id="home">
				<input type="button" className="btn" value="Button" onClick={this.toggleMenu.bind(this)}/>
				<div className="welcome">
					<%= image_tag 'logo.png' %>
					<h1 className="welcome-txt">Le ayudamos a encontrar su vivienda deseada</h1>
				</div>
				<nav>
					<ul className={this.classMenu()}>
						<li><a href="/">Inicio</a></li>
						<li><a href="/">Inmuebles</a></li>
						<li><a href="/">Sobre nosotros</a></li>
						<li><a href="/">Contacto</a></li>
					</ul>
				</nav>
			</div>
		);
	}
}