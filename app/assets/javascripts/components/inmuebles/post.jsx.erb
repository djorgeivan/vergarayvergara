class Post extends React.Component {

  constructor(props) {
    super(props);
  }

  addDots(number) {
   let array_number = number.toString().split("");
    for(let i = (array_number.length - 1); i > 0 ; i--) {
      if(i % 3 === 0) {
        array_number.splice((i), 0, ".");
      }
    }
   return array_number.join("");
  }

	render() {
    let post = this.props.post;
    let images = post.images[0].split(",");
		return(
      <div className="post">
        <div className="post-text">
          <h1><a target="_blank" href={"inmuebles/" + post.id }>{post.title}</a></h1>
        </div>

        <div className="post-img">
          <div className="post-features">
            <li><strong>Area:</strong> {post.area} mÂ²</li>
            <li><strong>Tipo:</strong> {post.kind}</li>
          </div>
          <img src={images[0]} alt=""/>
        </div>

        <div className="post-price-img">
          <%= image_tag 'sale' %>
        </div>
        <div className="post-price">
          <strong>${this.addDots(post.price)}</strong>
        </div>
      </div>
		);
	}
}